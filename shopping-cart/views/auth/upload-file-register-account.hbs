<div class="row justify-content-center align-self-center" style="margin-top : 20px; margin-bottom : 20px">
    <h3>Uploading File</h3>
</div>
<div class="row justify-content-center align-items-center">
    <div class="col-4" style="border : 1px solid gray; padding: 20px">
        <form role="form" action="/auth/register-account/upload-file" method="POST" enctype="multipart/form-data">
            <div class="input-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="fieldPhoto" required accept="image/*" name="photo">
                    <label class="custom-file-label" for="fieldPhoto">Choose file</label>
                </div>
            </div>
            <div id="uploads">

            </div>
            <br/>
            <button href="" type="submit" class="btn btn-success col-12 submit-form">Upload Imag</button>
        </form>
    </div>
</div>

{{#section 'js'}}
<script src="/vendor/jquery.ui.widget.js"></script>
<script src="/vendor/jquery.iframe-transport.js"></script>
<script src="/vendor/jquery.fileupload.js"></script>
<script>
    $(document).ready(() => {
        $('#fieldPhoto').fileupload({

            dataType: 'json', done: function (e, data) {

                $.each(data.result.files, function (index, file) {
                    debugger
                    $('#fileUploads').append($('<div class="upload">' + '<span class="glyphicon glyphicon-ok"></span>' + '&nbsp;' + file.originalName + '</div>'));

                });
            }

        });
    })
</script> {{/section}}