<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>
{{#each products}}
<div class="row">
    {{#each this}}
    <div class="col-sm-6 col-md-4">
        <div class="card">
            <img class="card-img-top img-thumbnail img-fluid" src="{{this.imagePath}}" alt="Card image">
            <div class="card-body">
                <h4 class="card-title">{{this.title}}</h4>
                <p class="card-text">{{this.description}}</p>
                <div>
                    <div class="float-left d-inline">{{this.price}}</div>
                    <a href="/add-to-cart/{{ this._id }}" class="btn btn-success float-right">Add To Cart</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}